{% extends 'base.html.twig' %}
{% block header %}
{% endblock %}
{% block body %}
    {# {{dump(race)}} #}
    <script src="./phaser.min.js"></script>
    <script type="text/javascript">
        
    var config = {
        type: Phaser.AUTO,
        width: 667,
        height: 375,
        physics: {
            default: 'arcade',
            arcade: {
                debug: true
            }
        },
        scene: {
            preload: preload,
            create: create,
            update: update
        }
    };

        var game=new Phaser.Game(config);
        var horse;
        async function getHorses(){
            let response = await fetch('/api/horses');
            let data = await response.json();
            game = new Phaser.Game(config);
            return data;
        };
        let horses =  [
            { 
                "id":22,
                "name":"joker",
                "image":1,
                "speed":0.01,
                "endurance":1.25,
                "form":9.41,
                "fitness":9.73,
                "odd":11
            },
            { 
                "id":6,
                "name":"Terror",
                "image":2,
                "speed":7.56,
                "endurance":6.65,
                "form":5.49,
                "fitness":2.45,
                "odd":7
            }
        ];
        function preload ()
        {
            this.load.image('lanes','image/game_asset/lanes.png');
            horses.forEach((horse,index)=>{
                {# this.load.image(`horseStand${index+1}`,`image/game_asset/horses/HorseStand${index+1}.png`); #}
                for (let i=1;i<=12;i++){
                    this.load.image(`horse${index+1}-${i}`,`image/game_asset/horses/horses_sprites/Horse${index+1}-${i}.png`);
                }
            })

            
        }

        function create ()
        {
            this.add.image(0, 0, 'lanes').setOrigin(0, 0);
            horses.forEach((horse,index)=>{
                {# this.add.image(0,(10+(20*(index))),`horseStand${index+1}`).setOrigin(0, 0).setScale(0.25,0.25); #}
            
                this.anims.create({
                key: 'run',
                name:`horse${index+1}`,
                frames: [
                    { key: `horse${index+1}-1` },
                    { key: `horse${index+1}-2` },
                    { key: `horse${index+1}-3` },
                    { key: `horse${index+1}-4` },
                    { key: `horse${index+1}-5` },
                    { key: `horse${index+1}-6` },
                    { key: `horse${index+1}-7` },
                    { key: `horse${index+1}-8` },
                    { key: `horse${index+1}-9` },
                    { key: `horse${index+1}-10` },
                    { key: `horse${index+1}-11` },
                    { key: `horse${index+1}-12` }
                ],
                frameRate: 16,
                repeat: -1
                });
                horse["sprite"] = this.physics.add.sprite(0, 10+(20*(index)), `horse${index+1}`)
                .setOrigin(0, 0)
                .setScale(0.25,0.25)
                .play('run');
                
            })
            console.log(horses)
                
        }

        function update ()
        {
           

            
        }   
    </script>
