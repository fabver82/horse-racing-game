    <script src="./phaser.min.js"></script>
    <script type="text/javascript">
        var config = {
            type: Phaser.AUTO,
            width: 667,
            height: 375,
            scene: {
                preload: preload,
                create: create,
                update: update
            }
        };

        var game = new Phaser.Game(config);

        function preload ()
        {
            this.load.image('lanes','image/game_asset/lanes.png');
        }

        function create ()
        {
            this.add.image(0, 0, 'lanes').setOrigin(0, 0);
        }

        function update ()
        {
        }   
    </script>
{% endblock %}
