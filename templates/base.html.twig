<!DOCTYPE html>
{% set title = 'Horse Game' %}
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{title}}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <h1>{{title}}</h1>
            </nav>
        </header>
        {% block body %}
        <section>
            <h2>Next Race:{{race.length}}</h2>
            <a href='#'>Start Race</a>
        </section>
        <section>
            {% set odds = race.getOdds %}
            {% dump(odds)%}
            {% for horse in race.horses %}
                <div> 
                    <img src='./image/horse/character4.png' width='35' alt='{{horse.name}} image'>
                    {{horse.name}}
                    {{horse.getFormStr}}
                    {{odds[loop.index-1]}}/1
                </div>

            {% endfor %}
        </section>
        {% endblock %}
        
    </body>
</html>
